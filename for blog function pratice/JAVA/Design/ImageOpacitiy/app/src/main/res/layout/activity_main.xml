<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 Opacitiy 조절"
        android:textSize="18sp"
        android:textColor="#222222"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_case_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="src/srcCompat"
        android:textSize="16sp"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_no_opacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="opacity 미적용"
        android:textSize="16sp"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="@+id/iv_karu_no_opacity"
        app:layout_constraintStart_toStartOf="@+id/iv_karu_no_opacity"
        app:layout_constraintTop_toBottomOf="@+id/tv_case_src" />

    <TextView
        android:id="@+id/tv_opacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="opacity 적용"
        android:textSize="16sp"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="@+id/iv_karu_opacity"
        app:layout_constraintStart_toStartOf="@+id/iv_karu_opacity"
        app:layout_constraintTop_toTopOf="@+id/tv_no_opacity" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이게 보이면 opacity"
        android:textColor="#FF0000"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_karu_no_opacity"
        app:layout_constraintEnd_toEndOf="@+id/iv_karu_no_opacity"
        app:layout_constraintStart_toStartOf="@+id/iv_karu_no_opacity" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이게 보이면 opacity"
        android:layout_marginBottom="5dp"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/iv_karu_no_opacity"
        app:layout_constraintEnd_toEndOf="@+id/iv_karu_opacity"
        app:layout_constraintStart_toStartOf="@+id/iv_karu_opacity" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이게 보이면 opacity"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blue_archive_no_opacity"
        app:layout_constraintEnd_toEndOf="@+id/iv_blue_archive_no_opacity"
        app:layout_constraintStart_toStartOf="@+id/iv_blue_archive_no_opacity" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이게 보이면 opacity"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blue_archive_no_opacity"
        app:layout_constraintEnd_toEndOf="@+id/iv_blue_archive_opacity"
        app:layout_constraintStart_toStartOf="@+id/iv_blue_archive_opacity" />

    <ImageView
        android:id="@+id/iv_karu_no_opacity"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_opacity"
        app:srcCompat="@drawable/img_karu_origin" />

    <ImageView
        android:id="@+id/iv_karu_opacity"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_karu_no_opacity"
        app:layout_constraintStart_toEndOf="@+id/iv_karu_no_opacity"
        app:layout_constraintTop_toTopOf="@+id/iv_karu_no_opacity"
        app:srcCompat="@drawable/img_karu" />

    <ImageView
        android:id="@+id/iv_blue_archive_no_opacity"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:background="@drawable/img_blue_archive_origin"
        />

    <ImageView
        android:id="@+id/iv_blue_archive_opacity"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="19dp"
        app:layout_constraintStart_toEndOf="@+id/iv_blue_archive_no_opacity"
        app:layout_constraintTop_toTopOf="@+id/iv_blue_archive_no_opacity"
        android:background="@drawable/img_blue_archive"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="background 이미지"
        android:textSize="16sp"
        android:textColor="#191919"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_karu_no_opacity" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SubActivity이동"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


</androidx.constraintlayout.widget.ConstraintLayout>